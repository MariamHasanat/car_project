#include <SPI.h>
#include <nRF24L01.h>
#include <RF24.h>

#define CE_PIN 2
#define CSN_PIN 3

RF24 radio(CE_PIN, CSN_PIN);
const byte address[6] = "VOICE";   // نفس العنوان مع TX

void setup() {
  Serial.begin(9600);
  Serial.println("NRF RX init...");

  if (!radio.begin()) {
    Serial.println("Radio begin failed!");
    while (1);
  }

  radio.setPALevel(RF24_PA_LOW);
  radio.setDataRate(RF24_1MBPS);
  radio.setChannel(108);
  radio.openReadingPipe(1, address);
  radio.startListening();

  Serial.println("Waiting for messages...");
}

void loop() {
  if (radio.available()) {
    char buf[32] = {0};
    radio.read(&buf, sizeof(buf));

    // اطبع الرسالة مباشرة
    Serial.print("Received: ");
    Serial.println(buf);   // لا تجمع الرسائل القديمة
  }
}
